<%- model_class = Mem -%>

<div class="container">

  <div class="row text-center">
  <% @mems.each do |mem| %>
    <div class="col-md-3 col-sm-6 hero-feature">
      <div class="thumbnail">
        <%= link_to image_tag(mem.image.url(:medium)), mem_path(mem) %>
      
        <div class="caption">
          <h3><%= mem.name %></h3>
          <p><%= mem.user %></p>
        </div>
     </div>
    </div>
  <% end %>
  </div>  
</div>  
